<!--
    ActionMenu - 右侧弹出菜单组件
    左侧提示词卡片，右侧面板（Header + 列表 + Footer）
-->

<brls:Box
    width="auto"
    height="auto"
    axis="row">

    <!-- 左侧：提示词卡片 -->
    <brls:Box
        id="actionMenu/left"
        width="auto"
        height="auto"
        grow="1"
        axis="column"
        justifyContent="flexStart"
        alignItems="flexEnd"
        paddingTop="87"
        paddingRight="18">

        <!-- 提示词卡片（默认隐藏，焦点变化时显示） -->
        <brls:Box
            id="actionMenu/hintCard"
            width="50%"
            height="auto"
            minHeight="30%"
            axis="column"
            shadowType="generic"
            paddingTop="30"
            paddingBottom="30"
            paddingLeft="30"
            paddingRight="30"
            backgroundColor="@theme/app/menuBg"
            cornerRadius="8">

            <brls:Label
                id="actionMenu/hintTitle"
                width="auto"
                height="auto"
                fontSize="21"/>

            <brls:Label
                id="actionMenu/hint"
                width="auto"
                height="auto"
                fontSize="21"
                marginTop="21"/>

        </brls:Box>

    </brls:Box>

    <!-- 右侧：菜单面板 -->
    <brls:Box
        id="actionMenu/panel"
        width="37%"
        height="auto"
        axis="column"
        backgroundColor="@theme/app/menuBg"
        shadowType="generic">

        <!-- Header -->
        <brls:Box
            width="auto"
            height="@style/brls/applet_frame/header_height"
            axis="row"
            justifyContent="spaceBetween"
            alignItems="center"
            paddingLeft="@style/brls/applet_frame/header_padding_sides"
            paddingRight="@style/brls/applet_frame/header_padding_sides">

            <brls:Label
                id="actionMenu/title"
                width="auto"
                height="auto"
                grow="1"
                fontSize="@style/brls/applet_frame/header_title_font_size"
                singleLine="true"/>

            <brls:Label
                id="actionMenu/version"
                width="auto"
                height="auto"
                shrink="0"
                marginLeft="25"
                fontSize="21.5"
                textColor="@theme/app/textSecondary"
                singleLine="true"/>

        </brls:Box>

        <!-- Header 分界线（缩短，不连到边缘） -->
        <brls:Box
            width="auto"
            height="1"
            marginLeft="20"
            marginRight="20"
            backgroundColor="@theme/brls/applet_frame/separator"/>

        <!-- Content -->
        <brls:Box
            width="auto"
            height="auto"
            grow="1">

            <RecyclingGrid
                id="actionMenu/grid"
                width="auto"
                height="auto"
                grow="1"
                marginRight="8"
                marginTop="5"
                marginBottom="5"
                spanCount="1"
                itemHeight="76"
                itemSpace="0"/>

        </brls:Box>

        <!-- Footer 分界线（缩短，不连到边缘） -->
        <brls:Box
            width="auto"
            height="1"
            marginLeft="20"
            marginRight="20"
            backgroundColor="@theme/brls/applet_frame/separator"/>

        <!-- Footer -->
        <brls:Box
            width="auto"
            height="@style/brls/applet_frame/footer_height"
            axis="row"
            justifyContent="spaceBetween"
            alignItems="center"
            paddingLeft="@style/brls/hints/footer_padding_sides"
            paddingRight="@style/brls/hints/footer_padding_sides"
            paddingTop="@style/brls/hints/footer_padding_top_bottom"
            paddingBottom="@style/brls/hints/footer_padding_top_bottom">

            <!-- 索引 -->
            <brls:Label
                id="actionMenu/index"
                width="auto"
                height="auto"
                fontSize="21.5"/>

            <!-- 按钮提示 -->
            <brls:Hints
                width="auto"
                height="auto"/>

        </brls:Box>

    </brls:Box>

</brls:Box>
