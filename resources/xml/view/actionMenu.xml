<!--
    ActionMenu - 右侧弹出菜单组件
    左侧提示词卡片，右侧面板（Header + 列表 + Footer）
-->

<brls:Box
    width="auto"
    height="auto"
    axis="row">

    <!-- 左侧：提示词卡片 -->
    <brls:Box
        id="actionMenu/left"
        width="auto"
        height="auto"
        grow="1"
        axis="column"
        justifyContent="center"
        alignItems="flexEnd"
        paddingRight="40">

        <!-- 提示词卡片（默认隐藏，焦点变化时显示） -->
        <brls:Box
            id="actionMenu/hintCard"
            width="280"
            height="auto"
            axis="column"
            paddingTop="20"
            paddingBottom="20"
            paddingLeft="20"
            paddingRight="20"
            backgroundColor="@theme/app/menuBg"
            cornerRadius="8">

            <brls:Label
                id="actionMenu/hint"
                width="auto"
                height="auto"
                fontSize="20"/>

        </brls:Box>

    </brls:Box>

    <!-- 右侧：菜单面板 -->
    <brls:Box
        id="actionMenu/panel"
        width="33%"
        height="auto"
        axis="column"
        backgroundColor="@theme/app/menuBg">

        <!-- Header -->
        <brls:Box
            width="auto"
            height="@style/brls/applet_frame/header_height"
            axis="row"
            justifyContent="spaceBetween"
            alignItems="center"
            paddingLeft="@style/brls/applet_frame/header_padding_sides"
            paddingRight="@style/brls/applet_frame/header_padding_sides"
            lineColor="@theme/brls/applet_frame/separator"
            lineBottom="1px">

            <brls:Label
                id="actionMenu/title"
                width="auto"
                height="auto"
                fontSize="@style/brls/applet_frame/header_title_font_size"/>

            <brls:Label
                id="actionMenu/version"
                width="auto"
                height="auto"
                fontSize="21.5"
                textColor="@theme/app/textSecondary"/>

        </brls:Box>

        <!-- Content -->
        <brls:Box
            width="auto"
            height="auto"
            grow="1">

            <RecyclingGrid
                id="actionMenu/grid"
                width="100%"
                height="100%"
                spanCount="1"
                itemHeight="76"
                itemSpace="0"/>

        </brls:Box>

        <!-- Footer -->
        <brls:Box
            width="auto"
            height="@style/brls/applet_frame/footer_height"
            axis="row"
            justifyContent="spaceBetween"
            alignItems="center"
            paddingLeft="@style/brls/hints/footer_padding_sides"
            paddingRight="@style/brls/hints/footer_padding_sides"
            paddingTop="@style/brls/hints/footer_padding_top_bottom"
            paddingBottom="@style/brls/hints/footer_padding_top_bottom"
            lineColor="@theme/brls/applet_frame/separator"
            lineTop="1px">

            <!-- 索引 -->
            <brls:Label
                id="actionMenu/index"
                width="auto"
                height="auto"
                fontSize="21.5"/>

            <!-- 按钮提示 -->
            <brls:Hints
                width="auto"
                height="auto"/>

        </brls:Box>

    </brls:Box>

</brls:Box>
