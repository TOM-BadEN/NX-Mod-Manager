<!--
    GameCard - 游戏卡片组件
    左侧图标 + 右侧文本（游戏名、版本、mod数量）
-->

<brls:Box
    width="auto"
    height="auto"
    axis="row"
    alignItems="center"
    focusable="true"
    paddingTop="20"
    paddingBottom="20"
    paddingLeft="20"
    paddingRight="20"
    backgroundColor="@theme/app/cardBg"
    cornerRadius="8"
    highlightCornerRadius="8"
    shadowType="generic">

    <!-- 左侧：游戏图标 -->
    <brls:Image
        id="gameCard/icon"
        width="120"
        height="120"
        marginRight="20"
        scalingType="fit"
        cornerRadius="8"
        image="@res/img/defaultIcon.jpg" />

    <!-- 右侧：文本区域 -->
    <brls:Box
        width="auto"
        height="120"
        axis="column"
        justifyContent="spaceEvenly"
        grow="1">

        <!-- 游戏名字 -->
        <brls:Label
            id="gameCard/name"
            width="auto"
            height="auto"
            fontSize="23"
            singleLine="true" />

        <!-- 版本 -->
        <brls:Label
            id="gameCard/version"
            width="auto"
            height="auto"
            fontSize="19"
            textColor="@theme/app/textSecondary" />

        <!-- mod数量 -->
        <brls:Label
            id="gameCard/modCount"
            width="auto"
            height="auto"
            fontSize="19"
            textColor="@theme/app/textSecondary" />

    </brls:Box>

</brls:Box>
