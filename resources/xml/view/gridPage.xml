<!--
    GridPage - 九宫格翻页组件
    3x3 布局，每页显示 9 个 GameCard
-->

<brls:Box
    width="auto"
    height="auto"
    axis="column"
    grow="1"
    justifyContent="flexStart"
    paddingLeft="40"
    paddingRight="40"
    paddingTop="20"
    paddingBottom="20">

    <!-- 第1行 -->
    <brls:Box
        width="auto"
        height="auto"
        axis="row"
        justifyContent="flexStart"
        grow="1"
        alignItems="center">

        <GameCard id="gridPage/card0" width="33.33%"/>
        <GameCard id="gridPage/card1" width="33.33%"/>
        <GameCard id="gridPage/card2" width="33.33%"/>

    </brls:Box>

    <!-- 第2行 -->
    <brls:Box
        width="auto"
        height="auto"
        axis="row"
        justifyContent="flexStart"
        grow="1"
        alignItems="center">

        <GameCard id="gridPage/card3" width="33.33%"/>
        <GameCard id="gridPage/card4" width="33.33%"/>
        <GameCard id="gridPage/card5" width="33.33%"/>

    </brls:Box>

    <!-- 第3行 -->
    <brls:Box
        width="auto"
        height="auto"
        axis="row"
        justifyContent="flexStart"
        grow="1"
        alignItems="center">

        <GameCard id="gridPage/card6" width="33.33%"/>
        <GameCard id="gridPage/card7" width="33.33%"/>
        <GameCard id="gridPage/card8" width="33.33%"/>

    </brls:Box>

</brls:Box>
