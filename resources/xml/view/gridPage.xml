<!--
    GridPage - 九宫格翻页组件
    3x3 布局，每页显示 9 个 GameCard
-->

<brls:Box
    width="auto"
    height="auto"
    axis="column"
    grow="1"
    justifyContent="flexStart"
    paddingLeft="40"
    paddingRight="40"
    paddingTop="10"
    paddingBottom="10">

    <!-- 第1行 -->
    <brls:Box
        width="auto"
        height="auto"
        grow="1"
        axis="row"
        justifyContent="flexStart"
        alignItems="center">

        <GameCard id="gridPage/card0" width="0" grow="1" shrink="1" margin="9"/>
        <GameCard id="gridPage/card1" width="0" grow="1" shrink="1" margin="9"/>
        <GameCard id="gridPage/card2" width="0" grow="1" shrink="1" margin="9"/>

    </brls:Box>

    <!-- 第2行 -->
    <brls:Box
        width="auto"
        height="auto"
        grow="1"
        axis="row"
        justifyContent="flexStart"
        alignItems="center">

        <GameCard id="gridPage/card3" width="0" grow="1" shrink="1" margin="9"/>
        <GameCard id="gridPage/card4" width="0" grow="1" shrink="1" margin="9"/>
        <GameCard id="gridPage/card5" width="0" grow="1" shrink="1" margin="9"/>

    </brls:Box>

    <!-- 第3行 -->
    <brls:Box
        width="auto"
        height="auto"
        grow="1"
        axis="row"
        justifyContent="flexStart"
        alignItems="center">

        <GameCard id="gridPage/card6" width="0" grow="1" shrink="1" margin="9"/>
        <GameCard id="gridPage/card7" width="0" grow="1" shrink="1" margin="9"/>
        <GameCard id="gridPage/card8" width="0" grow="1" shrink="1" margin="9"/>

    </brls:Box>

</brls:Box>
