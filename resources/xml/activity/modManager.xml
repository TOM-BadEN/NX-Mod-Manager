<!--
    Mod 管理页面布局
    左侧 RecyclingGrid（单列 Mod 列表） + 右侧 Mod 详情
-->

<MyFrame id="modManager/frame">
    <brls:Box
        id="modManager/content"
        width="100%"
        height="100%"
        axis="row">

        <!-- 左侧：Mod 列表 -->
        <RecyclingGrid
            id="modManager/grid"
            width="55%"
            height="100%"
            spanCount="1"
            itemHeight="110"
            itemSpace="18"/>

        <!-- 右侧：Mod 详情（占位，后续补充） -->
        <brls:Box
            id="modManager/detail"
            width="auto"
            height="auto"
            grow="1"
            axis="column"
            marginTop="25"
            marginBottom="25"
            marginLeft="0"
            marginRight="40"
            paddingTop="20"
            paddingBottom="20"
            paddingLeft="20"
            paddingRight="20"
            backgroundColor="@theme/app/cardBg"
            cornerRadius="8"
            highlightCornerRadius="8"
            shadowType="generic"/>

    </brls:Box>
</MyFrame>
