<!--
    主页面布局文件
-->

<MyFrame id="home/frame">
    <brls:Box id="home/content" width="100%" height="100%" title="模组管理器">
        <RecyclingGrid
            id="home/grid"
            width="auto"
            height="auto"
            grow="1"
            marginRight="7"
            marginTop="5"
            marginBottom="5"
            spanCount="3"
            itemHeight="160"
            itemSpace="18"/>
        <brls:Label
            id="home/noModHint"
            width="100%"
            height="100%"
            visibility="gone"
            fontSize="32"
            text="未找到模组，请将模组放入 /mods2 目录"
            textColor="@theme/app/textSecondary"
            horizontalAlign="center"
            verticalAlign="center"/>
    </brls:Box>
</MyFrame>
