<!--
    主页面布局文件
-->

<MyFrame id="main/frame">
    <brls:Box id="main/content" width="100%" height="100%" title="模组管理器">
        <RecyclingGrid
            id="main/grid"
            width="100%"
            height="100%"
            spanCount="3"
            itemHeight="160"
            itemSpace="18"/>
        <brls:Label
            id="main/noModHint"
            width="100%"
            height="100%"
            visibility="gone"
            fontSize="32"
            text="未找到模组，请将模组放入 /mods2 目录"
            textColor="@theme/app/textGray"
            horizontalAlign="center"
            verticalAlign="center"/>
    </brls:Box>
</MyFrame>
