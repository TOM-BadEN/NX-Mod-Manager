<!--
    Mod 列表页面布局
    左侧 RecyclingGrid（单列 Mod 列表） + 右侧 Mod 详情
-->

<MyFrame id="modList/frame">
    <brls:Box
        id="modList/content"
        width="100%"
        height="100%"
        axis="row">

        <!-- 左侧：Mod 列表 -->
        <RecyclingGrid
            id="modList/grid"
            width="50%"
            height="100%"
            spanCount="1"
            itemHeight="110"
            itemSpace="18"/>

        <!-- 右侧：Mod 详情（focusable 卡片，描述区 ScrollingFrame 滚动） -->
        <brls:Box
            id="modList/detail"
            width="auto"
            height="auto"
            grow="1"
            axis="column"
            focusable="true"
            marginTop="25"
            marginBottom="25"
            marginLeft="0"
            marginRight="40"
            paddingTop="20"
            paddingBottom="20"
            paddingLeft="20"
            paddingRight="20"
            backgroundColor="@theme/app/cardBg"
            cornerRadius="8"
            highlightCornerRadius="8"
            shadowType="generic">

            <!-- 顶部：游戏图标 + 游戏名/TID -->
            <brls:Box
                width="auto"
                height="auto"
                axis="row"
                alignItems="center">

                <brls:Image
                    id="modList/gameIcon"
                    width="80"
                    height="80"
                    marginRight="16"
                    cornerRadius="8"
                    scalingType="fit"
                    image="@res/img/game/defaultIcon.jpg"/>

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    justifyContent="center"
                    grow="1">

                    <brls:Label
                        id="modList/gameName"
                        width="auto"
                        height="auto"
                        fontSize="24"
                        singleLine="true"/>

                    <brls:Label
                        id="modList/gameTid"
                        width="auto"
                        height="auto"
                        fontSize="18"
                        textColor="@theme/app/textSecondary"
                        marginTop="11"
                        singleLine="true"/>

                </brls:Box>
            </brls:Box>

            <!-- 标签区域：圆角胶囊，自动换行 -->
            <brls:Box
                id="modList/tagRow"
                width="auto"
                height="auto"
                axis="row"
                marginTop="20">

                <brls:Box width="auto" height="auto" cornerRadius="12" backgroundColor="@theme/app/tagBg" paddingTop="6" paddingBottom="6" paddingLeft="12" paddingRight="12" marginRight="8" marginBottom="8">
                    <brls:Label id="modList/tagAuthor" width="auto" height="auto" fontSize="18"/>
                </brls:Box>

                <brls:Box width="auto" height="auto" cornerRadius="12" backgroundColor="@theme/app/tagBg" paddingTop="6" paddingBottom="6" paddingLeft="12" paddingRight="12" marginRight="8" marginBottom="8">
                    <brls:Label id="modList/tagType" width="auto" height="auto" fontSize="18"/>
                </brls:Box>

                <brls:Box width="auto" height="auto" cornerRadius="12" backgroundColor="@theme/app/tagBg" paddingTop="6" paddingBottom="6" paddingLeft="12" paddingRight="12" marginRight="8" marginBottom="8">
                    <brls:Label id="modList/tagVersion" width="auto" height="auto" fontSize="18"/>
                </brls:Box>

                <brls:Box width="auto" height="auto" cornerRadius="12" backgroundColor="@theme/app/tagBg" paddingTop="6" paddingBottom="6" paddingLeft="12" paddingRight="12" marginRight="8" marginBottom="8">
                    <brls:Label id="modList/tagGameVer" width="auto" height="auto" fontSize="18"/>
                </brls:Box>

                <brls:Box width="auto" height="auto" cornerRadius="12" backgroundColor="@theme/app/tagBg" paddingTop="6" paddingBottom="6" paddingLeft="12" paddingRight="12" marginRight="8" marginBottom="8">
                    <brls:Label id="modList/tagFormat" width="auto" height="auto" fontSize="18"/>
                </brls:Box>

                <brls:Box width="auto" height="auto" cornerRadius="12" backgroundColor="@theme/app/tagBg" paddingTop="6" paddingBottom="6" paddingLeft="12" paddingRight="12" marginRight="8" marginBottom="8">
                    <brls:Label id="modList/tagSize" width="auto" height="auto" fontSize="18"/>
                </brls:Box>

            </brls:Box>

            <!-- MOD 描述 -->
            <brls:Label
                id="modList/descTitle"
                width="auto"
                height="auto"
                fontSize="22"
                marginTop="20"
                text="MOD描述"/>

            <brls:ScrollingFrame
                id="modList/scroll"
                width="100%"
                grow="1"
                marginTop="20">

                <brls:Label
                    id="modList/descBody"
                    width="auto"
                    height="auto"
                    fontSize="20"
                    textColor="@theme/app/textSecondary"/>

            </brls:ScrollingFrame>

        </brls:Box>

    </brls:Box>
</MyFrame>
